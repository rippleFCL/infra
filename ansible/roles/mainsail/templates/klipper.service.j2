[Unit]
Description=Klipper 3D Printer Firmware SV1
Documentation=https://www.klipper3d.org/
After=network-online.target
Wants=udev.target

[Install]
WantedBy=multi-user.target

[Service]
Type=simple
User={{ mainsail_user }}
RemainAfterExit=yes
WorkingDirectory={{ mainsail_klipper_dir }}
EnvironmentFile={{ mainsail_printer_systemd_dir }}/klipper.env
ExecStart={{ mainsail_klipper_venv }}/bin/python $KLIPPER_ARGS
Restart=always
RestartSec=10
